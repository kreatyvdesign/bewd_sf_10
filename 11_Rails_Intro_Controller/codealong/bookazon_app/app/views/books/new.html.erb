<div class="col-xs-12">
<h1 style="color:#cc3333;">New Book</h1>

<div class="well">
  <%= simple_form_for @book do |f| %> <!--helper creates a form that will add new attribute values to the instance -->
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :genre %>
  <%= f.input :image_url %>
  <%= f.submit "Submit".html_safe, class: 'btn btn-lg btn-danger' %>
  <% end %>
</div>
</div>
